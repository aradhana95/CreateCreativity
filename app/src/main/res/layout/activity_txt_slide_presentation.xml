<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/txt_vid_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TxtSlidePresentation"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <LinearLayout
        android:id="@+id/txt_img_lay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_lay1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#000000"/>
        <ImageView
            android:id="@+id/img_lay2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#9C27B0"/>
        <ImageView
            android:id="@+id/img_lay3"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#E91E63"/>
        <ImageView
            android:id="@+id/img_lay4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#4CAF50"/>
        <ImageView
            android:id="@+id/img_lay5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFEB3B"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/music_lay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_img_lay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/music_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/record_aud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/music_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/music_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
            <LinearLayout
                android:id="@+id/music_frag_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="1"
                android:visibility="gone">

            <fragment
                android:id="@+id/music_list_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.example.createcreativity.MusicListFragment"
                android:layout_weight=".5"/>
            <fragment
                android:id="@+id/play_music_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                class="com.example.createcreativity.PlayMusicFragment"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>